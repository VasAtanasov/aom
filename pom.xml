<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>bg.autohouse</groupId>
    <artifactId>autohouse</artifactId>
    <version>2.0.0-SNAPSHOT</version>

    <packaging>pom</packaging>
    <name>Auto House (Parent)</name>
    <description>Auto House Parent Project</description>

    <properties>
        <java.version>17</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <plugin.maven.spring-boot.version>2.6.9</plugin.maven.spring-boot.version>
        <plugin.manve.docker.version>0.40.1</plugin.manve.docker.version>
        <plugin.maven.compiler.version>3.8.1</plugin.maven.compiler.version>
        <plugin.maven.dependency.version>3.3.0</plugin.maven.dependency.version>
        <plugin.maven.jar.version>3.2.0</plugin.maven.jar.version>
        <plugin.maven.source.version>3.2.1</plugin.maven.source.version>
        <version.dependencies.liquibase>4.8.0</version.dependencies.liquibase>

        <version.dependencies.lombok.mapstruct.binding>0.2.0</version.dependencies.lombok.mapstruct.binding>
        <version.dependencies.lombok>1.18.24</version.dependencies.lombok>
        <version.dependencies.mapstruct>1.5.2.Final</version.dependencies.mapstruct>
        <version.dependencies.hibernate>5.6.9.Final</version.dependencies.hibernate>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <artifactId>bg.autohouse.bom</artifactId>
                <groupId>bg.autohouse</groupId>
                <scope>import</scope>
                <type>pom</type>
                <version>${project.version}</version>
            </dependency>

            <!-- Internal dependencies -->
            <dependency>
                <artifactId>bg.autohouse.api</artifactId>
                <groupId>bg.autohouse</groupId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>bg.autohouse</groupId>
                <artifactId>bg.autohouse.dbupdate</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <artifactId>bg.autohouse.backend</artifactId>
                <groupId>bg.autohouse</groupId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <artifactId>bg.autohouse.integration</artifactId>
                <groupId>bg.autohouse</groupId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <artifactId>bg.autohouse.util</artifactId>
                <groupId>bg.autohouse</groupId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>bg.autohouse</groupId>
                <artifactId>ah-util-cache</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>bg.autohouse</groupId>
                <artifactId>ah-util-common</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <artifactId>bg.autohouse.spider</artifactId>
                <groupId>bg.autohouse</groupId>
                <version>${project.version}</version>
            </dependency>

            <!-- Test containers -->
            <dependency>
                <artifactId>bg.autohouse.backend</artifactId>
                <groupId>bg.autohouse</groupId>
                <scope>test</scope>
                <type>test-jar</type>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <artifactId>bg.autohouse.spider</artifactId>
                <groupId>bg.autohouse</groupId>
                <scope>test</scope>
                <type>test-jar</type>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <groupId>org.apache.maven.plugins</groupId>
                    <version>${plugin.maven.compiler.version}</version>
                    <configuration>
                        <annotationProcessorPaths>
                            <path>
                                <groupId>org.hibernate</groupId>
                                <artifactId>hibernate-jpamodelgen</artifactId>
                                <version>${version.dependencies.hibernate}</version>
                            </path>
                            <path>
                                <artifactId>mapstruct-processor</artifactId>
                                <groupId>org.mapstruct</groupId>
                                <version>${version.dependencies.mapstruct}</version>
                            </path>
                            <path>
                                <artifactId>lombok</artifactId>
                                <groupId>org.projectlombok</groupId>
                                <version>${version.dependencies.lombok}</version>
                            </path>
                            <!-- additional annotation processor required as of Lombok 1.18.16 -->
                            <path>
                                <artifactId>lombok-mapstruct-binding</artifactId>
                                <groupId>org.projectlombok</groupId>
                                <version>${version.dependencies.lombok.mapstruct.binding}</version>
                            </path>
                        </annotationProcessorPaths>
                        <release>${java.version}</release>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>

                <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
                    <groupId>org.apache.maven.plugins</groupId>
                    <version>${plugin.maven.jar.version}</version>
                </plugin>

                <plugin>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <groupId>org.springframework.boot</groupId>
                    <version>${plugin.maven.spring-boot.version}</version>
                    <configuration>
                        <excludes>
                            <exclude>
                                <artifactId>lombok</artifactId>
                                <groupId>org.projectlombok</groupId>
                            </exclude>
                        </excludes>
                    </configuration>
                </plugin>

                <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <groupId>org.apache.maven.plugins</groupId>
                    <version>${plugin.maven.source.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                            <id>generate-source-jar</id>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.liquibase</groupId>
                    <artifactId>liquibase-maven-plugin</artifactId>
                    <version>${version.dependencies.liquibase}</version>
                    <configuration>
                        <verbose>true</verbose>
                    </configuration>
                </plugin>

            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
            </plugin>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>DockerHub</id>
            <name>DockerHub</name>
            <uniqueVersion>false</uniqueVersion>
            <url>https://index.docker.io/v2/</url>
        </repository>
    </distributionManagement>

    <modules>
        <module>bg.autohouse.bom</module>
    </modules>

    <profiles>
        <profile>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <id>default</id>
            <modules>
                <module>bg.autohouse.api</module>
                <module>bg.autohouse.backend</module>
                <module>bg.autohouse.util</module>
                <module>bg.autohouse.integration</module>
                <module>bg.autohouse.spider</module>
                <module>bg.autohouse.docker</module>
                <module>bg.autohouse.dbupdate</module>
            </modules>
        </profile>
        <profile>
            <id>java</id>
            <modules>
                <module>bg.autohouse.api</module>
                <module>bg.autohouse.backend</module>
                <module>bg.autohouse.util</module>
                <module>bg.autohouse.integration</module>
                <module>bg.autohouse.dbupdate</module>
            </modules>
        </profile>
        <profile>
            <id>docker</id>
            <modules>
                <module>bg.autohouse.docker</module>
            </modules>
        </profile>
        <profile>
            <id>spider</id>
            <modules>
                <module>bg.autohouse.spider</module>
            </modules>
        </profile>
    </profiles>

</project>
